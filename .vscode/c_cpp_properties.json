{
    "version": 4,
    "configurations": [
        {
            "name": "Zephir for macOs",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/include/**",
                "${workspaceFolder}/external/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/clang",
            "cppStandard": "c++11",
            "cStandard": "c11"
        },
        {
            "name": "Zephir for Linux",
            "intelliSenseMode": "clang-x64",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/include/**",
                "${workspaceFolder}/external/**"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/**"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
            },
            "compilerPath": "/usr/bin/gcc",
            "cppStandard": "c++11",
            "cStandard": "c11"
        }
    ]
}
