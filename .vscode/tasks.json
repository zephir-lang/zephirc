{
    "version": "2.0.0",

    "tasks": [
        {
            "label": "CMake Build - Debug",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "-H.",
                "-Bbuild",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DZEPHIR_BUILD_TESTING=ON",
                "-DCODE_COVERAGE=ON"
            ],
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "focus": false,
                "showReuseMessage": false
            },
            "problemMatcher": []
        },

        {
            "label": "Build project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make",
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher":"$gcc"
        },

        {
            "label": "Clean profile data",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": [],
            "linux": {
                "command": "rm",
                "args": [
                    "-rf",
                    "ccov"
                ]
            },
            "osx": {
                "command": "rm",
                "args": [
                    "-rf",
                    "ccov"
                ]
            },
            "windows": {
                "command": "rd",
                "args": [
                    "-r",
                    "ccov"
                ]
            },
            "isBackground": true,
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "focus": false,
                "showReuseMessage": false
            }
        },

        {
            "label": "Run tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type":"shell",
            "command": "ctest",
            "args": [
               "--output-on-failure"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": [
                "Clean profile data",
                "Build project"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": {
                "owner": "cmake",
                "fileLocation": "absolute",
                "pattern":[
                    {
                        "regexp": "^(.*):(\\d+):\\s+Failure$",
                        "file": 1,
                        "location": 2
                    },
                    {
                        "regexp": "^(.*)$",
                        "message": 1
                    }
                ]
            }
        },

        {
            "label": "Generate HTML code coverage report",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "problemMatcher": [],
            "linux": {
                "command": "make",
                "args": [
                    "ccov-all"
                ]
            },
            "osx": {
                "command": "make",
                "args": [
                    "ccov-all"
                ]
            },
            "windows": {
                "command": "make",
                "args": [
                    "ccov-all"
                ]
            },
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "focus": false,
                "showReuseMessage": false
            }
        }
    ]
}
